{
  "id": "/killrweatherdataloader",
  "containers": [
    {
      "name": "loaderexecutor",
      "resources": {
        "cpus": 0.2,
        "mem": 1024
      },
      "image": {
        "kind": "DOCKER",
        "id": "lightbend/loader:1.2.0",
        "forcePull": true
      },
      "volumeMounts": [
        {
          "name": "data",
          "mountPath": "/usr/share"
        }
      ]
    },
    {
      "name": "initializer",
      "resources": {
        "cpus": 0.1,
        "mem": 1048,
        "disk": 0
      },
      "image": {
        "kind": "DOCKER",
        "id": "busybox"
      },
      "volumeMounts": [
        {
          "name": "data",
          "mountPath": "/usr/share"
        }
      ],
      "exec": {
        "command": {
          "shell": "wget http://s3-eu-west-1.amazonaws.com/fdp-killrweather-data/killrweather/data.zip -O /usr/share/data.zip; unzip /usr/share/data.zip -d /usr/share/"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "data"
    }
  ],
  "networks": [
    {
      "mode": "host"
    }
  ],
  "scaling": {
    "instances": 1,
    "kind": "fixed"
  }
}